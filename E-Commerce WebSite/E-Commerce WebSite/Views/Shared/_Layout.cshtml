    <script>
        // JavaScript to handle the toggle behavior
        document.addEventListener('DOMContentLoaded', function () {
            const backToTopButton = document.querySelector('.back-to-top');

            // Function to scroll to the top
            function scrollToTop() {
                window.scrollTo({
                    top: 0,
                    behavior: 'smooth'
                });
            }

            // Function to scroll to the bottom
            function scrollToBottom() {
                window.scrollTo({
                    top: document.body.scrollHeight,
                    behavior: 'smooth'
                });
            }

            // Function to toggle the button and arrow direction
            function toggleArrowDirection() {
                const isAtTop = window.scrollY === 0;
                if (isAtTop) {
                    backToTopButton.classList.remove('rotate-up');
                    backToTopButton.classList.add('rotate-down');
                } else {
                    backToTopButton.classList.remove('rotate-down');
                    backToTopButton.classList.add('rotate-up');
                }
            }

            // Function to toggle the button's visibility
            function toggleScrollDirection() {
                if (window.scrollY > 100) {
                    backToTopButton.classList.remove('hidden');
                } else {
                    backToTopButton.classList.add('hidden');
                }
            }

            // Initial state
            toggleScrollDirection();
            toggleArrowDirection(); // Added to set initial arrow direction

            // Event listener for scroll events
            window.addEventListener('scroll', function () {
                toggleScrollDirection();
                toggleArrowDirection(); // Added to update arrow direction while scrolling
            });

            // Event listener for button click to scroll to the top or bottom
            backToTopButton.addEventListener('click', function () {
                const isAtTop = window.scrollY === 0;
                if (isAtTop) {
                    scrollToBottom();
                } else {
                    scrollToTop();
                }
                toggleArrowDirection(); // Added to update arrow direction after clicking
            });
        });

    </script>

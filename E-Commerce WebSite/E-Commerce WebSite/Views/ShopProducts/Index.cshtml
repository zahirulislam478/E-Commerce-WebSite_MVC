@section scripts
{
    <script src="~/Scripts/jquery-3.7.1.js"></script>
    <script>
            $(document).ready(function () {
                function showImage(clickedImage) {
                    var clickedImageSrc = clickedImage.src;
                    var mainImage = $('#shopMainImage');
                    mainImage.attr('src', clickedImageSrc);
                    localStorage.setItem('mainImageSrc', clickedImageSrc);
                }
                $('.small-img').click(function () {
                    showImage(this);
                });
                var mainImageSrc = localStorage.getItem('mainImageSrc');
                if (mainImageSrc) {
                    $('#shopMainImage').attr('src', mainImageSrc);
                }
            });
    </script>

